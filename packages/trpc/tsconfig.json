{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "lib": ["ES2022"],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "declarationMap": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "composite": true,
        "tsBuildInfoFile": "dist/tsconfig.tsbuildinfo"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}